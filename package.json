{
  "name": "@node-core/utils",
  "version": "5.14.0",
  "description": "Utilities for Node.js core collaborators (simplified for testing)",
  "type": "module",
  "engines": {
    "node": "^18.18.0 || >=20.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "copy:source": "cpx \"src/**/*\" dist",
    "copy:package": "cpx package.json dist",
    "build": "npm-run-all copy:source copy:package",
    "test": "jest --passWithNoTests --coverage --coverageDirectory=coverage/jest"
  },
  "keywords": [
    "utilities",
    "nodejs-core"
  ],
  "author": "Joyee Cheung <joyeec9h3@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nodejs/node-core-utils.git"
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.21",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": ["js", "mjs", "cjs", "jsx", "ts", "tsx"],
    "coveragePathIgnorePatterns": ["/dist/", "/test/"],
    "coverageReporters": ["json", "lcov", "text", "clover"]
  }
}
